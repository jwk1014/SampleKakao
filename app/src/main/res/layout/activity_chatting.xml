<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tacademy.samplekakao.ChattingActivity"
    android:orientation="vertical"
    android:background="@color/chatBackgroundColor">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@android:color/transparent"/>
        <ListView
            android:id="@+id/chatting_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/chatting_plus_imageview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/action_bar_new_chat_icon"
                android:background="#BBBBBB"
                />
            <EditText
                android:id="@+id/chatting_talk_edittext"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:background="@null"/>
            <ImageView
                android:id="@+id/chatting_shap_imageview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/chatting_shap"
                android:padding="10dp"
                />
            <ImageView
                android:id="@+id/chatting_smile_imageview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/chatting_smile"
                android:padding="5dp"
                />
            <Button
                android:id="@+id/chatting_send_Button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:text="전송"
                android:layout_margin="3dp"
                android:enabled="false"
                android:onClick="onSendButton"/>
        </LinearLayout>
    </LinearLayout>
